{
  "manifest_version": 3,
  "name": "Offline TranslateKit AI Translator",
  "version": "1.2",
  "description": "Automatically translates pages using Translation API. Includes manual controls and setup info.",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TranslateKit Controls"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "trigger_translation": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "Trigger Translation Now"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["translate.js"],
      "run_at": "document_idle"
    }
  ]
}
